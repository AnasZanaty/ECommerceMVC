@using Demo.PL.Models
@model RegisterViewModel


@{
    ViewData["Title"] = "SignUp Page";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<div class="main-agileinfo">
	<div class="agileits-top">

			<form asp-action="SignUP">
			<input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="">
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
			<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
			<span asp-validation-for="@Model.Password" class="text-danger"></span>
			<input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassward" placeholder="Confirm Password" required="">
			<span asp-validation-for="@Model.ConfirmPassward" class="text-danger"></span>
			<div class="wthree-text">
			<label class="anim">
			<input type="checkbox" class="checkbox" required="">
			<span>I Agree To The Terms & Conditions</span>
			</label>
			<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
			</form>
		<p>You already have an account <a asp-action="SignIn">Login Now!</a></p>
	</div>
</div>

			@section Scripts {
				<partial name ="_ValidationScriptsPartial" />
			}