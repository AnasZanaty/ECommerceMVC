@model SignInViewModel

@{
    ViewData["Title"] = "SignIn Page";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
    <div class="agileits-top">
    <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="SignIn">

            <input class="text email" type="email" placeholder="email address" asp-for="@Model.Email" required="" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <input class="text email" type="password" placeholder="password" asp-for="@Model.Password" required="" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <div class="wthree-text m-3">
            <label class="anim">
            <input type="checkbox" class="checkbox" required="">
            <span>Remember Me</span>
             </label>
             <div class="clear"></div>
            </div>
            <input type ="submit" value="SignIn"/>
        </form>
        
        <p>You dont have account <a asp-action="SignUp">Register Now!</a></p>

    <p> <a asp-action="ForgetPssword" asp-controller="Account">Forget Password?</a></p>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
			}