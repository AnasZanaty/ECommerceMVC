@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        <h3>@TempData["message"]</h3>

    </div>
}

@if (Model?.Count() > 0)
{
    <table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x=>x.Code)</th>
                <th>@Html.DisplayNameFor(x=>x.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Code</td>
                    <td> @item.Name</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Department" asp-action="Details" asp-route-id="@item.Id"> Details</a>
                        <i class="fas fa-eye "></i>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Department" asp-action="Update" asp-route-id="@item.Id">Update </a>
                        <i class ="fas fa-edit "></i>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">Delete </a>
                        <i class ="fas fa-trash "></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Deparment IS Found</h3>

    </div>
}
