@using Demo.DAL.Entities
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>
<br/>
<a asp-action="Create" asp-controller="Department" class="btn btn-success" >Create New Department</a>
<br />
<br />

